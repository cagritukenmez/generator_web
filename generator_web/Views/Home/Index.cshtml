        document.addEventListener('DOMContentLoaded', () => {
            async function sendCommandToESP32(command, param) {
                const payload = { command: command, param: param };
                try {
                    const res = await fetch('/api/generator/command', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!res.ok) { // Hata durumunda da JSON okumaya çalış
                        const errorData = await res.json().catch(() => ({ status: 'unknown error' }));
                        throw new Error(`HTTP Hata ${res.status}: ${errorData.status || 'Sunucu hatası'}`);
                    }
                    const data = await res.json();
                    console.log('Sunucudan cevap:', data);
                    alert(`Komut gönderildi (${command}): ` + (data?.status ?? 'başarı'));
                } catch (err) {
                    console.error('Gönderme hatası:', err);
                    alert(`Komut gönderilemedi (${command}): ${err.message || 'Bağlantı hatası'}`);
                }
            }

            // Tüm '.control-btn' sınıfına sahip butonlar için olay delegasyonu
            document.querySelector('.control-buttons').addEventListener('click', (event) => {
                const targetButton = event.target.closest('.control-btn');

                if (targetButton) {
                    const command = targetButton.dataset.command;
                    // Eğer data-param niteliği varsa onu kullan, yoksa varsayılan olarak 1 kullan (veya 0)
                    const param = targetButton.dataset.param !== undefined ? parseInt(targetButton.dataset.param) : 1;

                    if (command) {
                        sendCommandToESP32(command, param);
                    } else {
                        console.warn('Tıklanan buton için data-command niteliği bulunamadı:', targetButton);
                    }
                }
            });
        });
